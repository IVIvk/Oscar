<Page x:Class="Oscar.UI.WPF.Pages.AdminFilmsManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Oscar.UI.WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminFilmsManagement">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <ListView Name="LstFilms" Grid.Column="0" Grid.Row="1" SelectionChanged="LoadFilms"></ListView>

        <StackPanel Grid.Column="1" Grid.Row="1">
            <Label Content="Film Id" Height="25"></Label>
            <Label Content="Titel" Height="25"></Label>
            <Label Content="Jaar van uitgave" Height="25"></Label>
            <Label Content="Genre" Height="25"></Label>
            <Label Content="Duur (in minuten)" Height="25"></Label>
            <Label Content="Plot" Height="25"></Label>
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="1">
            <TextBox Name="txtFilmId" IsEnabled="False" Height="25"></TextBox>
            <TextBox Name="txtFilmTitle" Height="25"></TextBox>
            <TextBox Name="txtFilmReleaseYear" Height="25"></TextBox>
            <TextBox Name="txtFilmGenre" Height="25"></TextBox>
            <TextBox Name="txtFilmDuration" Height="25"></TextBox>
            <TextBox x:Name="txtFilmPlot"
                     VerticalScrollBarVisibility="Visible"
                     Height="300"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     FontSize="12">
            </TextBox>
        </StackPanel>

        <StackPanel Grid.Column="3" Grid.Row="1">
            <Button x:Name="btnLoadFilms" Content="Laad films" Click="BtnLoadFilms_Click"></Button>
            <Button x:Name="btnNewFilm" Content="Nieuwe film" Click="btnNewFilm_Click"></Button>
            <Button x:Name="btnEditFilm" Content="Verander film" Click="BtnEditFilm_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
