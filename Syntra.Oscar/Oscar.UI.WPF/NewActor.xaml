<Page x:Class="Oscar.UI.WPF.NewActor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Oscar.UI.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewActor">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1">
            <Label Content="Voornaam" Height="25"></Label>
            <Label Content="Achternaam" Height="25"></Label>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBox Name="txtFirstNameActor" Height="25"></TextBox>
            <TextBox Name="txtLastNameActor" Height="25"></TextBox>
        </StackPanel>

        <Button Name="btnAddActor" Content="Voeg toe" Grid.Column="2" Grid.Row="1" Height="25" VerticalAlignment="Top" Click="BtnAddActor_Click"></Button>
    </Grid>
</Page>
