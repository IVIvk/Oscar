<Page x:Class="Oscar.UI.WPF.AdminOverview"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Oscar.UI.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1000"
      Title="AdminOverview">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="1">
            <Button Name="btnUsersOverview" Content="Gebruikers" Click="BtnUsersOverview_Click"></Button>
            <Button Name="btnFilmsOverview" Content="Films"></Button>
            <Button Name="btnActorsOverview" Content="Acteurs"></Button>
            <Button Name="btnGenresOverview" Content="Genres"></Button>
        </StackPanel>

        <Frame Name ="frmOverviewFrame" Grid.Row="1" Grid.Column="1" NavigationUIVisibility="Hidden" Width="800"></Frame>
    </Grid>
</Page>
