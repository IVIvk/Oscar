<Page x:Class="Oscar.UI.WPF.PageNewUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Oscar.UI.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PageNewUser">

    <Grid>
        <Label Content="Gebruikersnaam" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Wachtwoord" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Label Content="Herhaal wachtwoord" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="23" Margin="135,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="135,45,0,0" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="txtPasswordConfirm" HorizontalAlignment="Left" Height="23" Margin="135,76,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnRegisterNewUser" Content="Registreer" HorizontalAlignment="Left" Margin="135,104,0,0" VerticalAlignment="Top" Width="75" Click="btnRegisterNewUser_Click"/>

    </Grid>
</Page>
