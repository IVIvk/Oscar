<Page x:Class="Oscar.UI.WPF.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Oscar.UI.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Login">

    <Grid x:Name="PageLogin" Loaded="OnLoaded">
        <Label Content="Gebruikersnaam" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Wachtwoord" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="23" Margin="111,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="111,45,0,0" VerticalAlignment="Top" Width="168"/>
        <Button x:Name="btnLogin" Content="Ga verder" HorizontalAlignment="Left" Margin="111,73,0,0" VerticalAlignment="Top" Width="106" Click="btnLogin_Click"/>
        <Button x:Name="btnNewUser" Content="Nieuwe gebruiker" HorizontalAlignment="Left" Margin="111,97,0,0" VerticalAlignment="Top" Width="106" Click="btnNewUser_Click"/>
    </Grid>
</Page>
